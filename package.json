{
  "name": "@wdk/core",
  "version": "1.0.0-beta.2",
  "description": "A flexible manager that can register and manage multiple wallet instances for different blockchains dynamically.",
  "keywords": [
    "wdk",
    "core"
  ],
  "author": "Tether",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/tetherto/wdk-core.git"
  },
  "main": "index.js",
  "type": "module",
  "types": "./types",
  "scripts": {
    "build:types": "tsc --project tsconfig.json && npm run build:types:index",
    "build:types:index": "tsc --project tsconfig.index.json",
    "docs": "jsdoc -r . --destination ./docs",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "test:brittle": "brittle tests/**/*brittle.*.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage"
  },
  "jest": {
    "testMatch": [
      "**/*jest.*.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/tests/.*brittle.*\\.js$"
    ]
  },
  "dependencies": {
    "@wdk/wallet": "https://github.com/tetherto/wdk-wallet#develop"
  },
  "devDependencies": {
    "brittle": "^3.18.3",
    "cross-env": "^7.0.3",
    "jest": "30.1.3",
    "jsdoc": "4.0.4",
    "standard": "17.1.2",
    "typescript": "5.8.3"
  }
}